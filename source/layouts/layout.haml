!!!
%html{ lang: "en" }
  %head
    %meta{ charset: "utf-8" }
    %meta{ name: "viewport", content: "width=device-width,initial-scale=1" }
    %meta{ name: "description", content: current_page.data.description || "Bourbon is a lightweight mixin library for Sass." }
    %title= current_page.data.title || "Bourbon"
    = stylesheet_link_tag "//fonts.googleapis.com/css?family=Source+Code+Pro"
    = stylesheet_link_tag "main"
  %body
    = partial "partials/site_nav"
    = partial "partials/site_header"
    %main.screen-main{ role: "main" }
      = yield
    = partial "partials/site_footer"
    = partial "partials/analytics"
    = javascript_include_tag "main"
